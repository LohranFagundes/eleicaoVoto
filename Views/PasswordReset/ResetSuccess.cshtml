@{
    ViewData["Title"] = "Senha Redefinida";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>Senha Redefinida com Sucesso
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-key fa-4x text-success"></i>
                    </div>
                    
                    <h5 class="text-success mb-3">@ViewBag.SuccessMessage</h5>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.UserEmail))
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-user me-2"></i>
                            A senha foi redefinida para: <strong>@ViewBag.UserEmail</strong>
                        </div>
                    }
                    
                    <div class="alert alert-success">
                        <i class="fas fa-info-circle me-2"></i>
                        Agora você pode fazer login com sua nova senha.
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Login", "Vote")" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="fas fa-lock me-1"></i>
                    Sua senha foi alterada com segurança.
                </small>
            </div>
        </div>
    </div>
</div>

<div class="fixed-bottom bg-warning text-center py-2">
    <small><strong>Homologação</strong></small>
</div>