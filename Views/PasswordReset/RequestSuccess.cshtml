@{
    ViewData["Title"] = "Solicitação Enviada";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>Solicitação Enviada
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h5 class="mb-3">Email Processado</h5>
                    
                    <div class="alert alert-success">
                        <i class="fas fa-info-circle me-2"></i>
                        @ViewBag.SuccessMessage
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Email as string))
                    {
                        <p class="text-muted mb-4">
                            Email solicitado: <strong>@ViewBag.Email</strong>
                        </p>
                    }

                    <div class="mb-4">
                        <h6>Próximos passos:</h6>
                        <ol class="text-start">
                            <li>Verifique sua caixa de entrada</li>
                            <li>Procure por um email de redefinição de senha</li>
                            <li>Clique no link fornecido no email</li>
                            <li>Defina sua nova senha</li>
                        </ol>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <small>
                            <strong>Importante:</strong> Verifique também sua pasta de spam. 
                            O link expira em algumas horas por segurança.
                        </small>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="@Url.Action("RequestReset", "PasswordReset")" class="btn btn-outline-primary">
                            <i class="fas fa-redo me-2"></i>Solicitar Novamente
                        </a>
                        <a href="@Url.Action("Login", "Vote")" class="btn btn-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>Voltar ao Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="fixed-bottom bg-warning text-center py-2">
    <small><strong>Homologação</strong></small>
</div>

@section Scripts {
    <script>
        // Auto-refresh reminder after 5 minutes
        setTimeout(function() {
            if (!document.hidden) {
                alert('Lembre-se de verificar seu email para o link de redefinição de senha.');
            }
        }, 300000); // 5 minutes
    </script>
}