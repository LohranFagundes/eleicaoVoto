@{
    ViewData["Title"] = "Voto Já Registrado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>Voto Já Registrado
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-vote-yea fa-4x text-warning"></i>
                    </div>
                    
                    <h5 class="text-dark mb-3">@ViewBag.Message</h5>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Seu voto foi registrado com sucesso e está sendo processado pelo sistema.
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Vote")" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Voltar ao Início
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="fixed-bottom bg-warning text-center py-2">
    <small><strong>Homologação</strong></small>
</div>