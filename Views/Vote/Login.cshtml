@model VoteHomWebApp.Models.LoginModel
@{
    ViewData["Title"] = "Login - Sistema de Votação";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="funcorsan-logo" style="font-size: 1.5rem;">
                        <div style="color: #0066cc;">◆◆</div>
                        <div style="margin-top: 10px;">FUNCORSAN</div>
                        <div style="font-size: 0.8rem; color: #666; font-weight: normal;">Seu futuro mais presente</div>
                    </div>
                </div>

                <h3 class="text-center mb-4">Acesso ao Sistema de Votação</h3>

                <form asp-controller="Vote" asp-action="Login" method="post">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Erro ao fazer login:</strong>
                            <div asp-validation-summary="All" class="mb-0 mt-2"></div>
                        </div>
                    }
                    
                    <div class="mb-3">
                        <label asp-for="CPF" class="form-label">CPF</label>
                        <input asp-for="CPF" class="form-control" placeholder="Digite seu CPF" autocomplete="username" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Senha</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" autocomplete="current-password" id="passwordInput" />
                            <button class="btn btn-outline-secondary" type="button" id="togglePasswordBtn">
                                <i class="fas fa-eye" id="togglePasswordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i> 
                        Utilize suas credenciais fornecidas pela organização para acessar o sistema de votação.
                    </small>
                    
                    <div class="mt-3">
                        <small class="text-info">
                            <strong>Possíveis problemas de acesso:</strong><br>
                            • Verifique se a eleição ainda está no período de votação<br>
                            • Confirme se seu CPF e senha estão corretos<br>
                            • Certifique-se de que você ainda não votou
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.getElementById('togglePasswordBtn').addEventListener('click', function() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('togglePasswordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        });
    </script>
}