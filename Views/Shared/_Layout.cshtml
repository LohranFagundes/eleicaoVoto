<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Votação</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VoteHomWebApp.styles.css" asp-append-version="true" />
    <style>
        .funcorsan-logo {
            color: #0066cc;
            font-weight: bold;
            font-size: 1.2rem;
        }
        .vote-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin: 10px 0;
            padding: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .vote-card:hover {
            background-color: #f8f9fa;
            border-color: #0066cc;
        }
        .vote-card.selected {
            background-color: #e7f3ff;
            border-color: #0066cc;
            border-width: 2px;
        }
        .candidate-avatar {
            width: 50px;
            height: 50px;
            background-color: #17a2b8;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }
        .vote-timer {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
        }
        .step-indicator {
            background-color: #6f42c1;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <div class="funcorsan-logo me-3">
                        <i class="fas fa-diamond"></i> FUNCORSAN
                        <div style="font-size: 0.7rem; color: #666;">Seu futuro mais presente</div>
                    </div>
                </div>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="d-flex align-items-center">
                        <span class="me-3">@User.Identity.Name</span>
                        <form asp-controller="Vote" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">Sair</button>
                        </form>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            <small>&copy; 2025 FUNCORSAN - Sistema de Votação Eletrônica</small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
